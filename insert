            display: flex;
            justify-content: center;
            align-items: center;
            position: relative;
        }

        #insert {
            position: relative;
            width: 1920px;
            height: 405px;
            background-color: rgba(50, 50, 50, 1);
            display: flex;
            align-items: center;
            padding-left: 50px;
            opacity: 1;
            transition: opacity 0.5s ease;
        }

        #logo {
            width: 100px;
            height: 100px;
            margin-right: 50px;
            position: relative;
            border-radius: 50%;
            background: linear-gradient(135deg, #333, #777);
            display: flex;
            justify-content: center;
            align-items: center;
        }

        #logo::before {
            content: 'I';
            color: white;
            font-size: 50px;
            font-family: Arial, sans-serif;
            font-weight: bold;
        }

        #text {
            color: white;
            font-size: 24px;
            display: flex;
            flex-direction: column;
