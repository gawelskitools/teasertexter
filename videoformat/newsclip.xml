<?xml version="1.0" encoding="UTF-8"?>
<videoFormat>
  <formatgruppe>nachricht</formatgruppe>
  <tags>#newsclip</tags>
  <bearbeitungshinweise>
    <ziel>Erstelle eine formatgerechte, strukturierte Nachrichtenauswertung.</ziel>
    <warn-tags-verarbeitung>
      <bei-warn-tag name="Mutmaßung">Nutze Konjunktiv und vermeide Tatsachenbehauptungen ohne Quelle.</bei-warn-tag>
      <bei-warn-tag name="Vorverurteilung">Keine Schuldzuweisungen. Neutralität wahren.</bei-warn-tag>
      <bei-warn-tag name="Falschmeldung">Alte Inhalte nur mit Korrekturhinweis übernehmen.</bei-warn-tag>
      <bei-warn-tag name="Identitätsschutz">Keine Details zur betroffenen Person.</bei-warn-tag>
      <bei-warn-tag name="rechtlich sensibel">Juristisch korrekte Begriffe verwenden. Keine Wertungen.</bei-warn-tag>
    </warn-tags-verarbeitung>
    <custom-warn-tags>
      <!-- Hier können optional zusätzliche Tag-Verarbeitungsregeln ergänzt werden -->
    </custom-warn-tags>
    
    <struktur>
      <ueberschrift>
        <inhalt>max. 60 Zeichen, faktenbasiert</inhalt>
        <stil>kurz, prägnant</stil>
        <grammatik>Hauptsatzstruktur</grammatik>
        <tonalitaet>neutral</tonalitaet>
      </ueberschrift>
      <kurzbeschreibung>
        <inhalt>max. 150 Zeichen, informativer Satz</inhalt>
        <stil>sachlich, kompakt</stil>
        <grammatik>aktiv, klar</grammatik>
        <tonalitaet>nachrichtlich</tonalitaet>
      </kurzbeschreibung>
      <keywords>
        <ziel>10 Begriffe aus Thema, Ort, Ereignis</ziel>
        <stil>SEO-orientiert</stil>
      </keywords>
      <themen>
        <ziel>5 Hauptthemenbereiche</ziel>
        <stil>übergeordnet, strategisch</stil>
      </themen>
      <schwerpunkte>
        <aufbau>prägnante Stichpunkte</aufbau>
        <fokus>Inhalt, Ort, Betroffene</fokus>
        <stil>übersichtlich</stil>
      </schwerpunkte>
      <kontextHinweis>Bei fehlenden Quellen #kontext-Auswertung kennzeichnen</kontextHinweis>
    </struktur>
    <freitextHinweis>Bitte sachlich formulieren. Zielplattform: Website-Startseite.</freitextHinweis>
  </bearbeitungshinweise>
</videoFormat>
